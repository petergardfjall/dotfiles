#
# NOTE: scrollback mode is enabled via (C-o [)
#       in that mode (C-u) and (C-d) are used to page up/down
#


# set the command character: the default (C-x) is "^x"
# here I use (C-o)
#  For example: (C-o d) to detach from current session
#  See http://web.mit.edu/gnu/doc/html/screen_5.html#SEC8
escape ^Oo

# F2 detaches from screen session
bindkey -k k2 detach
# F5 creates a new screen within screen session
bindkey -k k5 screen
# F6 kills the current screen
bindkey -k k6 kill
# F7: toggle previous screen
bindkey -k k7 prev
# F8: toggle next screen
bindkey -k k8 next
# F9 to set title in current screen
bindkey -k k9 title
msgwait 3
sorendition 04 43

# Status line format
hardstatus alwayslastline "%H | %-w %{+r} %n %t %{-} %+w %= F2=detach F5=new F6=kill F7/F8=prev/next F9=rename (C-o [)=scrollback mode | %D %M %d %c"

# Use visual bell
vbell on

# Max lines in scrollback buffer
defscrollback 8096
startup_message off
defutf8 off