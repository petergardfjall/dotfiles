
;
; load additional modules from module directory in lexicographical order
;
(setq modules (file-expand-wildcards "~/dotfiles/emacs/*.el"))
(setq sortedmodules (sort (copy-sequence modules) #'string-lessp))
;; Note: messages are logged in *Messages* buffer
(message "Loading modules: %s" sortedmodules) 
(dolist (module sortedmodules)
  (load-file module)
)
