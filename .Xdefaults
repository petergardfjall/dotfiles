
aixterm.pointerShape		: XC_left_ptr
#ifdef COLOR
aixterm*background		: midnightblue
aixterm*foreground		: wheat
#endif

#
# xterm settings
#
xterm*font			: 8x13
#ifdef COLOR
  xterm*cursorColor		: green
  xterm*background		: black
  xterm*foreground		: wheat
#endif
# Make sure Meta key (i.e. Alt) is used as Escape in xterm.
# This allows Alt+b/Alt+f to skip words, Alt+Backspace/Delete
# to delete entire words, etc.
xterm*metaSendsEscape: true
# Additional xterm settings
xterm*saveLines:        32767
xterm*scrollBar:        true
xterm*rightScrollBar:   true

# Sets the font to use for Emacs in X mode
emacs.font:      8x13

# For any application supporting visual bell, blink instead of beeping.
*visualBell: True



# Settings for the nedit text editor
nedit*background                : #000040
nedit*foreground                : grey
nedit*text.background           : black
nedit*text.foreground           : yellow
nedit*text.cursorForeground     : red
nedit*text.selectForeground     : white
nedit*text.selectBackground     : darkblue
nedit.remapDeleteKey            : False
nedit*text.heavyCursor          : True
nedit*text.highlightForeground  : black
nedit*text.highlightBackground  : green

xldb.font                       : fixed
xldb.language                   : C++
xldb.geometry                   : 1000x900+0+0
xldb.AutoRaise                  : off
xldb.SaveUnder                  : on
