alias copy="xsel --clipboard"

# one directory deep and sort by size

alias du1="du -h --max-depth=1 | sort -h"

alias emacs="TERM=xterm-24bit emacs"

alias emacsnd="TERM=xterm-24bit emacs --no-desktop"

alias gopls-env='echo export GOFLAGS="-tags=integration,db"'

alias lst="ls -al --full-time"

alias mvnci="mvn clean install"
alias mvnnt="mvn clean install -Dmaven.test.skip"

alias o="xdg-open"

# /usr/bin/time is a more powerful variant of the bash 'time' command which can
# also output profiling of the executed command.
alias proftime='/usr/bin/time -f "\n\t%E\treal time (s)\n\t%U\tuser time (s)\n\t%S\tsystem time (s)\n\t%P\tpercent CPU\n\t%M\tmaximum resident memory (KB)"'

alias screen="screen -c ~/dotfiles/screen/screenrc"

alias suspend="xfce-session-logout -s"

alias t="xfce4-terminal"