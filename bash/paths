# sets up various path variables

export MYBIN=${HOME}/bin
export MYSCRIPTS=${HOME}/bin/scripts

export JAVA_HOME=/opt/java
export JAVA_OPTS="-Xmx1024m -XX:MaxPermSize=128m"
export MAVEN_HOME=/opt/maven
export MAVEN_OPTS="-Xmx1024m -XX:MaxPermSize=128m"
export ECLIPSE_HOME=/opt/eclipse
export ANT_HOME=/opt/ant

export PATH=${MYSCRIPTS}:${MYBIN}:${ECLIPSE_HOME}:${JAVA_HOME}/bin:${MAVEN_HOME}/bin:${ANT_HOME}/bin:/opt/bin:${PATH}

export SVN_URL=svn://svn.cs.umu.se/2011/cloud/cloud
export GIT_URL=ssh://peppar/Home/projects/elastisys-dev/cloud.git
