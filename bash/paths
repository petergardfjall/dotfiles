# sets up various path variables

export JAVA_HOME=/opt/java
export JAVA_OPTS="-Xmx1024m -XX:MaxPermSize=128m"
export MAVEN_HOME=/opt/maven
export MAVEN_OPTS="-Xmx1024m -XX:MaxPermSize=128m"

export GOROOT=/opt/go
export GOPATH=${HOME}/dev/go

export PATH=${HOME}/bin:${HOME}/bin/scripts:/opt/bin:${GOROOT}/bin:${GOPATH}/bin:${PATH}
export PATH=${HOME}/bin/scripts/kubernetes:${PATH}

# installed rust version
if which rustc > /dev/null; then
    rust_version=$(rustc --version | awk '{ print $2 }')
    export RUST_SRC=/usr/src/rustc-${rust_version}/src/
fi
