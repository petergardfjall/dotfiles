# sets up various path variables

export MYBIN=${HOME}/bin
export MYSCRIPTS=${HOME}/bin/scripts

export JAVA_HOME=/opt/java
export OPENJDK_HOME=/opt/openjdk
export JAVA_OPTS="-Xmx1024m -XX:MaxPermSize=128m"
export MAVEN_HOME=/opt/maven
export MAVEN_OPTS="-Xmx1024m -XX:MaxPermSize=128m"
export ECLIPSE_HOME=/opt/eclipse
export ANT_HOME=/opt/ant
export JMETER_HOME=/opt/jmeter
export PACKER_HOME=/opt/packer

export GO_HOME=/usr/local/go

export PATH=${MYSCRIPTS}:${MYBIN}:${ECLIPSE_HOME}:${JAVA_HOME}/bin:${MAVEN_HOME}/bin:${ANT_HOME}/bin:/opt/bin:${MAVE_HOME}/bin:${JMETER_HOME}/bin:${PACKER_HOME}:${PATH}:${GO_HOME}/bin

# Amazon auto-scaling command-line tools
export AWS_AUTO_SCALING_HOME=/opt/amazon/AutoScaling
export PATH=${AWS_AUTO_SCALING_HOME}/bin:${PATH}

