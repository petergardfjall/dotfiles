# sets up various path variables

export JAVA_HOME=/opt/java
export MAVEN_HOME=/opt/maven

export GOROOT=/opt/go
export GOPATH=${HOME}/dev/go

# add user-installed python binaries ('pip install --user <package>')
export PATH=${HOME}/.local/bin:${PATH}
# add rust tools
export PATH=${HOME}/.cargo/bin:${PATH}
# add built go binaries
export PATH=${GOPATH}/bin:${PATH}
# add go tools
export PATH=${GOROOT}/bin:${PATH}
# add bcc (eBPF) tools
export PATH=${PATH}:/usr/share/bcc/tools/
# add pyenv to path
export PATH=~/.pyenv/bin:${PATH}
# add user-installed gem binaries ('gem install --user-install <gem>')
export PATH=${PATH}:${HOME}/.gem/ruby/2.7.0/bin

export PATH=${HOME}/bin:${PATH}
export PATH=${HOME}/bin/scripts:${PATH}
export PATH=${HOME}/bin/scripts/docker:${PATH}
export PATH=${HOME}/bin/scripts/kubernetes:${PATH}
export PATH=${HOME}/bin/scripts/kubernetes/helm:${PATH}

export PATH=/opt/bin:${PATH}

export PATH=~/.emacs.d/elpasnap:${PATH}
